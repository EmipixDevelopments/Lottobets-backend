  <script>
		    $(document).ready(function() {
				$(".addLink").click(function(){
					let url = $(this).attr("data-url");
					let urltype = $(this).attr("data-urltype");
					let lottoid = $(this).attr("data-lottoid");
					let lottoName = $(this).attr("data-lottoname");
					$(".modal-title").text(lottoName);
					$(".lottoId").val(lottoid);
					$(".lottoName").val(lottoName);
					if(urltype == 'Live'){
						$(".lottoLink").html('<label for="live_url" class="col-sm-3 control-label">Live URL :</label><div class="col-sm-9"><input type="text" class="form-control live_url" id="live_url" name="live_url" /></div>');
						
						$(".live_url").val(url);
					} else {
						$(".lottoLink").html('<label for="drawLink" class="col-sm-3 control-label">Watch URL :</label><div class="col-sm-9"><input type="text" class="form-control drawLink" id="drawLink" name="drawLink" /></div>');	
						
						$(".drawLink").val(url);
					}
					
				});
				$(".close").click(function(){
					let url = "";
				});			
			});	
		</script>
